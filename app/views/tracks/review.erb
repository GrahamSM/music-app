<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron">
        <h1><%= @track.title %> Review</h1>
      </div>
    </div>
  </div>
</div>

<h1><%= @track.title %> <small>By: <%= @track.artist %> </small></h1>
<p>
	<strong>Author:</strong> <%= @track.author %>
</p>
<p>
	<em><%= @track.url %></em>
</p>
<hr/>
<a href="/tracks" class="btn btn-info">
	<span class="glyphicon glyphicon-music"></span> Back to all tracks
</a>
<p></p>

<form method="post" action="/review">
  <input type="hidden" name="track_id" value="<%= @track.id %>"></input>
  <fieldset class="form-group">
  <textarea class="form-control" id="exampleTextarea" name="content" rows="3"></textarea>
  <button type="submit" class="btn btn-default">Submit</button>
</fieldset>
</form>
