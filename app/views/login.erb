<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron">
        <h1>Log In</h1>
      </div>
    </div>
  </div>
</div>

<% if @user && @user.errors.any? %>
	<div class="panel panel-danger">
		<div class="panel-heading">
			<strong class="panel-title">Errors:</strong>
		</div>
		<ul class="list-group">
			<% @user.errors.full_messages.each do |track| %>
				<li class="list-group-item"><%= track %></li>
			<% end %>
		</ul>
	</div>
<% end %>

